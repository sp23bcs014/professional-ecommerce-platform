{
  "version": 2,
  "name": "fraz-modern-ecommerce",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "DATABASE_URL": "@database-url",
    "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY": "@stripe-publishable-key",
    "STRIPE_SECRET_KEY": "@stripe-secret-key",
    "SMTP_HOST": "@smtp-host",
    "SMTP_PORT": "@smtp-port", 
    "SMTP_USER": "@smtp-user",
    "SMTP_PASS": "@smtp-pass"
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  }
}
